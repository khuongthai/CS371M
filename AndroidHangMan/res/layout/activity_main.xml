<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main" >

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/hello_world"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/guessed"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/word"
        android:layout_below="@+id/input"
        android:layout_marginTop="28dp"
        android:paddingTop="10dp"
        android:text="@string/guessed_letter"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/word"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="@string/just_letter" >

        <requestFocus />
    </EditText>

      <TextView
          android:id="@+id/countValue"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignRight="@+id/word"
          android:layout_alignTop="@+id/count"
          android:layout_marginRight="22dp"
          android:paddingTop="10dp"
          android:textSize="12sp" />

      <TextView
          android:id="@+id/guessedValues"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/guessed"
          android:layout_alignBottom="@+id/guessed"
          android:layout_alignRight="@+id/countValue"
          android:paddingTop="10dp"
          android:textSize="12sp" />

      <TextView
          android:id="@+id/count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/guessed"
          android:layout_below="@+id/guessed"
          android:paddingTop="10dp"
          android:text="@string/count_left"
          android:textSize="12sp" />

      <TextView
          android:id="@+id/status"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/count"
          android:layout_centerHorizontal="true"
          android:paddingTop="10dp"
          android:textSize="40sp" />

</RelativeLayout>